{ "css.lint.unknownAtRules": "ignore",

  // Prevent JSON LS from fetching remote schemas when offline
  "json.schemaDownload.enable": false,

  // Optional: explicitly map tsconfig files to an empty schema to stop hints
  "json.schemas": [
    { "fileMatch": ["tsconfig.json", "tsconfig.*.json"], "schema": {} }
  ]
}
